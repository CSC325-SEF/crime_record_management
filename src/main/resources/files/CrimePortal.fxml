<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.crimerecord.CrimePortal"
      spacing="20"
      alignment="CENTER"
      prefHeight="800" prefWidth="1200"
      styleClass="vbox"
      style="-fx-background-color: linear-gradient(to bottom right, #ffffff, #f0f0f0); -fx-padding: 60;">

    <Label text="Welcome to the Crime Record Management Portal"
           style="-fx-font-size: 28px;
              -fx-font-weight: bold;
              -fx-text-fill: white;
              -fx-background-color: #3949ab;
              -fx-padding: 20px;
              -fx-alignment: center;
              -fx-border-radius: 10px;
              -fx-background-radius: 10px;"
           maxWidth="Infinity"
           alignment="CENTER" />



    <Region minHeight="200" />

    <Button fx:id="btnCivilian" text="Civilian Report" minWidth="250" styleClass="portal-button"
            style="-fx-font-size: 30; -fx-background-radius: 5; -fx-padding: 10;
               -fx-background-color: transparent;
               -fx-border-color: #4CAF50;
               -fx-border-width: 2;
               -fx-text-fill: #4CAF50;"/>

    <Button fx:id="btnOfficer" text="Officer Access" minWidth="250" styleClass="portal-button"
            style="-fx-font-size: 30; -fx-background-radius: 5; -fx-padding: 10;
               -fx-background-color: transparent;
               -fx-border-color: #2196F3;
               -fx-border-width: 2;
               -fx-text-fill: #2196F3;"/>

    <Button fx:id="btnAdmin" text="Admin Access" minWidth="250" styleClass="portal-button"
            style="-fx-font-size: 30; -fx-background-radius: 5; -fx-padding: 10;
               -fx-background-color: transparent;
               -fx-border-color: #F44336;
               -fx-border-width: 2;
               -fx-text-fill: #F44336;"/>




    <Region minHeight="40"/>
    <Label fx:id="messageLabel" styleClass="message-label"/>
</VBox>
